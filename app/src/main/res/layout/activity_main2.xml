<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:weightSum="2"
    android:orientation="vertical"
    android:background="#5B29B3"
    tools:context=".MainActivity2">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"
       android:orientation="horizontal"
       >
       <androidx.cardview.widget.CardView
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:clickable="true"
           android:layout_weight="1"
          android:layout_margin="5dp"
          android:id="@+id/SeatView1iid"
          android:foreground="?attr/selectableItemBackground">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
               android:padding="5dp"
              android:background="#FFC107"
                android:src="@drawable/ic_baseline_single_bed_24"

              />
             <TextView
                 android:padding="10dp"
                 android:textStyle="bold"
                 android:textSize="30dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Seat"/>




         </LinearLayout>


       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:clickable="true"
           android:layout_weight="1"
           android:layout_margin="5dp"
           android:id="@+id/SeatView1id"
           android:foreground="?attr/selectableItemBackground">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:gravity="center">
               <ImageView
                   android:layout_width="64dp"
                   android:layout_height="64dp"
                   android:padding="10dp"
                   android:background="#FFC107"
                   android:src="@drawable/ic_baseline_single_bed_24"

                   />
               <TextView
                   android:padding="10dp"
                   android:textStyle="bold"
                   android:textSize="30dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Diagnosis"/>




           </LinearLayout>


       </androidx.cardview.widget.CardView>





   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:id="@+id/SurgeryCardId"
            android:foreground="?attr/selectableItemBackground">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:padding="10dp"
                    android:background="#FFC107"
                    android:src="@drawable/ic_baseline_single_bed_24"

                    />
                <TextView
                    android:id="@+id/surgeryOptId"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Surgery"/>




            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:id="@+id/SeatView"
            android:foreground="?attr/selectableItemBackground">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:padding="10dp"
                    android:background="#FFC107"
                    android:src="@drawable/ic_baseline_single_bed_24"

                    />
                <TextView
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diagnosis"/>




            </LinearLayout>


        </androidx.cardview.widget.CardView>





    </LinearLayout>


</LinearLayout>